run = "sh -c 'php -S 0.0.0.0:${PORT:-5000} server.php'"
modules = ["php-8.2", "nix"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "php -S 0.0.0.0:${PORT:-5000} server.php"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PHP Server"

[[workflows.workflow]]
name = "PHP Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sh -c 'php -S 0.0.0.0:${PORT:-5000} server.php'"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
